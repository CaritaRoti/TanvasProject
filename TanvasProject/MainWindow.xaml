<Window x:Class="TanvasProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TanvasProject"
        mc:Ignorable="d"
        Title="TanvasProject" Width="1280" Height="800"
        Loaded="Window_Loaded"
        >
    <Grid Name="mainGrid">
        <Image Source="Assets/thingy2.png" Width="1280" Height="800" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button x:Name="screenshotbutton" Width="150" Height="50" Click="takeScreenshot">Click to screenshot</Button>
        <Button x:Name="spritebutton" Width="100" Height="100" Margin="417,234,763,450" Click="createHapticImage">Create sprite</Button>
    </Grid>

</Window>
